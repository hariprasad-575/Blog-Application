<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Blog Page</title>
    
</head>
<body>
    <%- include('./partials/nav') %>
    <div class="container mt-4">
        <h1><%= blog.title %></h1>
        <img src=<%= blog.coverImgUrl %> width="700px" >
        <p class="mt-4" > <%= blog.body %> </p>
    </div>

    <div class="container mt-4">
        <img  class="mx-2" src="<%= blog.createdBy.profileImgUrl %>" alt="" width="50px" ><%= blog.createdBy.fullName%>
    </div>

    <div class="container mt-4" >
        <h2>Comments (<%= comments.length %>)</h2>
        <% if (locals.user) { %>
            <form action="/blog/comment/<%= blog._id %>" method="post" >
                <div class="mb-3">
                  <input type="text"  name="content" class="form-control" id="content" aria-describedby="content" placeholder="leave your comment here">
                </div>
                <button type="submit" class="btn btn-secondary">Add</button>
    
            </form>
            
        <% } %>
        <div class="mt-3">
            <% comments.forEach(comment => { %>
                <div class="card mb-3">
                    <div class="card-body ">
                        <img class="mx-2" src="<%= comment.createdBy.profileImgUrl %>" alt="" width="40px" ><%= comment.createdBy.fullName%>
                        <p class="mx-2"><%= comment.content.replace(/\n/g, '<br>') %></p>
                    </div>
                  </div>
            <% }) %>
        </div>
    </div>
    <%- include('./partials/scripts') %>
</body>
</html>
